  "bugs": {
    "url": "https://github.com/neeraj-2/mytodolist/issues"
  },
  "homepage": "https://github.com/neeraj-2/mytodolist#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.10",
    "react-router-dom": "^5.2.0"
  }
}
